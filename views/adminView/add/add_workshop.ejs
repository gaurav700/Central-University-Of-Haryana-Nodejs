<% layout("layouts/boilerplateAdmin") -%>

  <div class="col-sm-12 mx-3 jumbotron mt-5">
    <h3 class="text-center">Add New Workshop</h3>
    <form action="/addWorkshopAdmin" class="needs-validation" novalidate method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="workshop[title]">
      </div>
      <div class="form-group">
        <label for="organiser">Organiser</label>
        <input type="text" class="form-control" id="organiser" name="workshop[organiser]">
      </div>
      <div class="form-group">
        <label for="from_date">From Date</label>
        <input type="date" class="form-control" id="from_date" name="workshop[from_date]" onkeypress="isInputNumber(workshop)">
      </div>
      <div class="form-group">
        <label for="to_date">To Date</label>
        <input type="date" class="form-control" id="to_date" name="workshop[to_date]">
      </div>
      <div class="form-group">
        <label for="time">Time</label>
        <input type="time" class="form-control" id="time" name="workshop[time]">
      </div>
      <div class="form-group">
        <label for="venue">Venue</label>
        <input type="text" class="form-control" id="venue" name="workshop[venue]">
      </div>
      <div class="form-group">
        <label for="link">Link</label>
        <input type="text" class="form-control" id="link" name="workshop[link]">
      </div>
      <div class="form-group">
        <label for="photo">Photo</label>
        <input type="file" class="form-control" id="photo" name="workshop[photo]">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input type="text" class="form-control" id="description" name="workshop[description]">
      </div>
      <div class="form-group">
        <label for="fees">Fees</label>
        <input type="text" class="form-control" id="fees" name="workshop[fees]">
      </div>
      <div class="text-center">
        <button type="submit" class="btn confer-btn mt-4 wow fadeInUp" data-wow-delay="100ms" id="submit"
          name="submit">Submit</button>
        <button class="btn confer-btn mt-4 wow fadeInUp" data-wow-delay="100ms" id="submit" name="submit"><a
            href="/workshopAdmin">Close</a></button>
      </div>
    </form>
  </div>
  <!-- Only Number for input fields -->
  <script>
    function isInputNumber(evt) {
      var ch = String.fromCharCode(evt.which);
      if (!(/[0-9]/.test(ch))) {
        evt.preventDefault();
      }
    }
  </script>