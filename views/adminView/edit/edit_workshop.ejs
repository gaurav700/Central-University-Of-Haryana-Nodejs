<% layout("layouts/boilerplateAdmin") -%>

  <div class="col-sm-12 mx-3 jumbotron mt-5">
    <h3 class="text-center">Update Workshop Details</h3>
    <form action="/editworkshopAdmin/<%= showWorkshop._id %>" class="needs-validation" novalidate method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="workshop[title]" value="<%= showWorkshop.title %>">
      </div>
      <div class="form-group">
        <label for="organiser">Organiser</label>
        <input type="text" class="form-control" id="organiser" name="workshop[organiser]" value="<%= showWorkshop.organiser %>">
      </div>
      <div class="form-group">
        <label for="from_date">From Date</label>
        <input type="date" class="form-control" id="from_date" name="workshop[from_date]" onkeypress="isInputNumber(event)"  value="<%= showWorkshop.from_date.toISOString().split('T')[0] %>">
      </div>
      <div class="form-group">
        <label for="to_date">To Date</label>
        <input type="date" class="form-control" id="to_date" name="workshop[to_date]"  value="<%= showWorkshop.to_date.toISOString().split('T')[0] %>">
      </div>
      <div class="form-group">
        <label for="time">Time</label>
        <input type="time" class="form-control" id="time" name="workshop[time]" value="<%= showWorkshop.time %>">
      </div>
      <div class="form-group">
        <label for="venue">Venue</label>
        <input type="text" class="form-control" id="venue" name="workshop[venue]" value="<%= showWorkshop.venue %>">
      </div>
      <div class="form-group">
        <label for="link">Link</label>
        <input type="text" class="form-control" id="link" name="workshop[link]" value="<%= showWorkshop.link %>">
      </div>
      <div class="form-group">
        <label for="photo">Previous Photo</label>
        <img src="<%= showWorkshop.photo.url %>" alt="<%= showWorkshop.photo.filename %>" height="100px" width="100px">
      </div>
      <div class="form-group">
        <label for="photo">Photo</label>
        <input type="file" class="form-control" id="photo" name="workshop[photo]">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input type="text" class="form-control" id="description" name="workshop[description]" value="<%= showWorkshop.description %>">
      </div>
      <div class="form-group">
        <label for="fees">Fees</label>
        <input type="text" class="form-control" id="fees" name="workshop[fees]" value="<%= showWorkshop.fees %>">
      </div>
      <div class="text-center">
        <button type="submit" class="btn confer-btn mt-4 wow fadeInUp" data-wow-delay="100ms" id="submit"
          name="submit">Submit</button>
        <button class="btn confer-btn mt-4 wow fadeInUp" data-wow-delay="100ms" id="submit" name="submit"><a
            href="/workshopAdmin">Close</a></button>
      </div>
    </form>
  </div>
  <!-- Only Number for input fields -->
  <script>
    function isInputNumber(evt) {
      var ch = String.fromCharCode(evt.which);
      if (!(/[0-9]/.test(ch))) {
        evt.preventDefault();
      }
    }
  </script>