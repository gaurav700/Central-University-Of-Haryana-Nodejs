<% layout("layouts/boilerplateAdmin") -%>

  <div class="col-sm-12 mx-3 jumbotron mt-5">
    <h3 class="text-center">Update Conference Details</h3>
    <form action="/editConferAdmin/<%= showConfer._id %>" class="needs-validation" novalidate method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="confer[title]" value="<%= showConfer.title %>">
      </div>
      <div class="form-group">
        <label for="organiser">Organiser</label>
        <input type="text" class="form-control" id="organiser" name="confer[organiser]"  value="<%= showConfer.organiser %>">
      </div>
      <div class="form-group">
        <label for="from_date">From Date</label>
        <input type="date" class="form-control" id="from_date" name="confer[from_date]" onkeypress="isInputNumber(event)"  value="<%= showConfer.from_date.toISOString().split('T')[0] %>">
      </div>
      <div class="form-group">
        <label for="to_date">To Date</label>
        <input type="date" class="form-control" id="to_date" name="confer[to_date]"  value="<%= showConfer.to_date.toISOString().split('T')[0] %>">
      </div>
      <div class="form-group">
        <label for="time">Time</label>
        <input type="time" class="form-control" id="time" name="confer[time]"  value="<%= showConfer.time %>">
      </div>
      <div class="form-group">
        <label for="venue">Venue</label>
        <input type="text" class="form-control" id="venue" name="confer[venue]"  value="<%= showConfer.venue %>">
      </div>
      <div class="form-group">
        <label for="link">Link</label>
        <input type="text" class="form-control" id="link" name="confer[link]"  value="<%= showConfer.link %>">
      </div>
      <div class="form-group">
        <label for="photo">Previous Photo</label>
        <img src="<%= showConfer.photo.url %>" alt="<%= showConfer.photo.filename %>" height="100px" width="100px">
      </div>
      <div class="form-group">
        <label for="photo">Photo</label>
        <input type="file" class="form-control" id="photo" name="confer[photo]">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <input type="text" class="form-control" id="description" name="confer[description]"  value="<%= showConfer.description %>">
      </div>
      <div class="form-group">
        <label for="fees">Fees</label>
        <input type="text" class="form-control" id="fees" name="confer[fees]"  value="<%= showConfer.fees %>">
      </div>
      <div class="text-center">
        <button type="submit" class="btn confer-btn mt-4 wow fadeInUp" data-wow-delay="100ms" id="submit"
          name="submit">Submit</button>
        <button class="btn confer-btn mt-4 wow fadeInUp" data-wow-delay="100ms" id="submit" name="submit"><a
            href="/conferAdmin">Close</a></button>
      </div>
    </form>
  </div>
  <!-- Only Number for input fields -->
  <script>
    function isInputNumber(evt) {
      var ch = String.fromCharCode(evt.which);
      if (!(/[0-9]/.test(ch))) {
        evt.preventDefault();
      }
    }
  </script>